<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_height="60dp"
            android:fontFamily="@font/font3"
            android:text="한보식"
            android:textAlignment="center"
            android:textColor="#a52a2a"
            android:textSize="20pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/font4"
            android:text="밥집이름"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/show_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:fontFamily="@font/font4"
            android:inputType="text"
            android:textSize="10pt">

        </EditText>

        <Button
            android:id="@+id/searchBob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#faf0e6"
            android:fontFamily="@font/font4"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="search"
            android:text="탐색"
            android:textColor="#a52a2a"
            android:textSize="10pt" />

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/font4"
                android:text="전화번호 : "
                android:textSize="10pt" />

            <TextView
                android:id="@+id/show_tel"
                android:layout_width="267dp"
                android:layout_height="30dp"
                android:layout_below="@id/show_name"
                android:ems="10"
                android:fontFamily="@font/font4"
                android:inputType="phone"
                android:textSize="10pt" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/font4"
                android:text="배달여부 : "
                android:textSize="10pt" />

            <TextView
                android:id="@+id/show_delivery"
                android:layout_width="264dp"
                android:layout_height="30dp"
                android:layout_below="@id/show_name"
                android:ems="10"
                android:fontFamily="@font/font4"
                android:inputType="text"
                android:textSize="10pt" />
        </TableRow>


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font4"
            android:text="위치"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/show_addr"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:ems="10"
            android:fontFamily="@font/font4"
            android:inputType="text"
            android:textSize="10pt" />

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/font4"
                android:text="오픈시간 : "
                android:textAlignment="textEnd"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/show_open"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:textSize="10pt"
                android:ems="10"
                android:fontFamily="@font/font4"
                android:inputType="text" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/font4"
                android:text="주문마감시간 : "
                android:textAlignment="textEnd"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/show_close"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ems="10"
                android:fontFamily="@font/font4"
                android:inputType="text"
                android:textSize="10pt" />
        </TableRow>

        <Button
            android:id="@+id/searchMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="#faf0e6"
            android:fontFamily="@font/font4"
            android:textColor="#a52a2a"
            android:textSize="10pt"
            android:onClick="searchMap"
            android:text="밥집 위치 지도로 보기"/>
    </TableLayout>
</LinearLayout>
